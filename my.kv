<CreateAccountWindow>:
    name: "create"

    username: username
    email: email
    password: passw

    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: username
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.25,"y":0.05}
            size_hint: 0.5, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.27}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>:
    FloatLayout:
        Button:
            id: game
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Game"
            on_release:
                root.manager.transition.direction = "down"
                app.root.current = "IntroGame"

        Button:
            id: chatbot
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Chatbot"
            on_release:
                root.manager.transition.direction = "down"
                app.root.current = "chatbot"

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

<IntroGameWindow>:
    FloatLayout:
        Button:
            id: game
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Play Game"
            on_release:
                root.manager.transition.direction = "down"
                app.root.current = "instructions"

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "down"

<InstructionsWindow>:
    FloatLayout:
        Label:
            text:"Instructions"
            font_size: 100
            pos_hint: {"x":0.3, "top":0.95}
            size_hint: 0.35, 0.15
        Label:
            text:"-You will be asked a set of multiple choice questions, where you select between 4 answers\n-For each question you answer correctly, you receive a certain amount of money\n-You will be given an option to keep the money and walk away. If you choose this, the game ends\n-If not, the game continues\n-If you get a question wrong, the game ends and you walk away with NOTHING\n-If you correctly answer 24 questions, you walk away with the maximum prize.\n-If you are having any issues, pressing the 'help' button on the website will redirect you to the Help Desk\n\n-This window will be kept open. "
            font_size: 30
            pos_hint: {"x":0.3, "top":0.7}
            size_hint: 0.35, 0.15
        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Press this button to Play"
            on_release:
                root.manager.transition.direction = "down"
                root.GameRun()
        Button:
            pos_hint:{"x":0.02, "y": 0.96}
            size_hint:0.2,0.05
            text: "Return to Previous Page"
            on_release:
                app.root.current = "IntroGame"
                root.manager.transition.direction = "down"


<ChatbotWindow>:
    FloatLayout:

        Label:
            text:"The Chatbot is unavailable... \nHowever it is Coming Soon!"
            font_size: 100
            pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.35, 0.15

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Return to Previous Page"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "down"


